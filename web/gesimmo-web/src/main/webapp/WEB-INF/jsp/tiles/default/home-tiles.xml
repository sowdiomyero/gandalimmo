       "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">
<tiles-definitions>

    <definition name="index" extends="main">
        <put-attribute name="home" value="/WEB-INF/jsp/v1/home.jsp" />
        <put-attribute name="login" value="/WEB-INF/jsp/v1/login.jsp" />
    </definition>
    
    <definition name="userslist" extends="main">
        <put-attribute name="home" value="/WEB-INF/jsp/v1/users.jsp"  />
        <put-attribute name="login" value="/WEB-INF/jsp/v1/login.jsp" />
    </definition>
    
    <!--Mot de passe oubliÃ©-->
    <definition name="forgotPassword" extends="main">
        <!-- if user authentified, display home page -->

        <put-attribute name="home" value="/WEB-INF/jsp/v1/home.jsp" />
        <!-- if user is anonymous, invite him to log in application through  login page-->
        <put-attribute name="login" value="/WEB-INF/jsp/v1/forgot_password.jsp" />
    </definition>




